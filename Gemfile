# Gemfile for Creep3r
# Grab Sources from the default RubyGems depot
source 'https://rubygems.org'

# Core of our crawler
gem 'anemone'
gem 'mechanize', '>= 2.7.7'

# LibCurl Wrapper which makes life much easier
gem 'curb'

# Parsing of HTML & XML made easy
gem 'hpricot'
gem 'nokogiri', '>= 1.11.4'

# Nice MySQL like output tables
gem 'text-table'

# Easy MySQL like table printing
gem 'text-table'

# Progress Bar for Curl Multi Requests
gem 'ruby-progressbar'

# SSH Connection Handling for injecting into SSH Log files
gem 'net-ssh'

# MySQL Connection Handler
gem 'mysql2'

# SQL Server Connection Handler (DBI ODBC doesnt work for me, idk....)
gem 'tiny_tds'

# We need to get Bcrypt Gem for Hashing Function
gem 'bcrypt'

# Handy for various things, used mainly in Shodan search
gem 'json'

# Pure Ruby Zip Implementation, used for Zip Cracking
gem 'archive-zip'

# Postgres Connection Handler
gem 'pg'

# SNMP Connection Handler and MIB References
gem 'snmp'

# Ruby LM:NTLM Hash Generator class
gem 'smbhash'
